<Page x:Class="kursipovisheniakvalificaciy.Pages.EditMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование данных">

    <Grid Margin="20" Background="Azure">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
          
            <RowDefinition Height="20"/>
          
            <RowDefinition Height="Auto"/>
            
            <RowDefinition Height="Auto"/>
          
            <RowDefinition Height="Auto"/>
            
            <RowDefinition Height="Auto"/>
           
            <RowDefinition Height="*"/>
           
        </Grid.RowDefinitions>


        <Button Background="Blue" Foreground="AliceBlue" Content="Назад" Width="80" Height="30"
                HorizontalAlignment="Left"
                Click="BackButton_Click"/>


        <Button Background="Blue" Foreground="AliceBlue" Content="Редактировать группы" Grid.Row="2"
                Width="250" Height="40" Margin="10"
                Click="EditGroups_Click"/>


        <Button Background="Blue" Foreground="AliceBlue" Content="Редактировать курсы" Grid.Row="3"
                Width="250" Height="40" Margin="10"
                Click="EditKursi_Click"/>

        

    
    </Grid>
</Page>

<Page x:Class="kursipovisheniakvalificaciy.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Профиль"
      Background="White">

    <Grid Background="Azure">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Профиль пользователя" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Логин:" FontSize="16"/>
            <TextBlock Text="{Binding Login}" FontSize="16" FontWeight="Bold" Foreground="Blue" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" FontSize="16"/>
            <TextBlock Text="{Binding Parol}" FontSize="16" FontWeight="Bold" Foreground="Blue"/>
            <Button Background="Blue" Foreground="AliceBlue" Content="Назад" Click="Button_Click"></Button>
        </StackPanel>
        
        
    </Grid>
</Page>

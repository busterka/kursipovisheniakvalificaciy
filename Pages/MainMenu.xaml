<Page x:Class="kursipovisheniakvalificaciy.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kursipovisheniakvalificaciy.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid Background="Azure">
        <TextBlock Text="Главное меню" FontSize="24" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Background="Blue" Foreground="AliceBlue" Content="Профиль" Width="200" Height="40" Click="Profile_Click"/>
            <Button Background="Blue" Foreground="AliceBlue" Content="Группы" Width="200" Height="40" Click="Groups_Click"/>
            <Button Background="Blue" Foreground="AliceBlue" Content="Выйти" Width="200" Height="40" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Page>
